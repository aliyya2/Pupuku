<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.pupuku.ui.FirstFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_CatalogFragment"
            app:destination="@id/CatalogFragment" />
        <action
        android:id="@+id/action_FirstFragment_to_ContactFragment"
        app:destination="@id/ContactFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_AboutFragment"
            app:destination="@id/AboutFragment" />


    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.pupuku.ui.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <argument
            android:name="fertilizer"
            app:argType="com.example.pupuku.model.Fertilizer"
            app:nullable="true"/>
    </fragment>
    <fragment
        android:id="@+id/CatalogFragment"
        android:name="com.example.pupuku.ui.CatalogFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_catalog">

        <action
            android:id="@+id/action_CatalogFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/ContactFragment"
        android:name="com.example.pupuku.ui.ContactFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_contact">

        <action
            android:id="@+id/action_ContactFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/AboutFragment"
        android:name="com.example.pupuku.ui.AboutFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_about">

        <action
            android:id="@+id/action_AboutFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>

</navigation>